{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build DOD Phase 1",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Vec2.cpp",
                "${workspaceFolder}/GameObject.cpp",
                "${workspaceFolder}/GameObjectsDOD.cpp",
                "${workspaceFolder}/Game.cpp",
                "-o",
                "${workspaceFolder}/game.exe",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/SDL2/x86_64-w64-mingw32/include/SDL2",
                "-L${workspaceFolder}/SDL2/x86_64-w64-mingw32/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lpsapi"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build DOD Project"
        }
    ]
}